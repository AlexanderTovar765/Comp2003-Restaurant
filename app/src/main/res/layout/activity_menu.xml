<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restaurant_bg"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Restaurant Menu"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#B3FFFFFF"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <!-- Starters -->
        <TextView
            android:text="Starters"
            android:textSize="20sp"
            android:textColor="#B3FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:text="• Garlic Bread - $4.50"
            android:layout_width="wrap_content"
            android:textColor="#B3FFFFFF"
            android:layout_height="wrap_content" />
        <TextView android:text="• Caesar Salad - $6.00"
            android:layout_width="wrap_content"
            android:textColor="#B3FFFFFF"
            android:layout_height="wrap_content" />

        <!-- Mains -->
        <TextView
            android:text="Mains"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#B3FFFFFF"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:text="• Grilled Salmon with Lemon Butter - $18.00"
            android:layout_width="wrap_content"
            android:textColor="#B3FFFFFF"
            android:layout_height="wrap_content" />
        <TextView android:text="• Chicken Alfredo Pasta - $15.50"
            android:layout_width="wrap_content"
            android:textColor="#B3FFFFFF"
            android:layout_height="wrap_content" />
        <TextView android:text="• Margherita Pizza - $12.00"
            android:layout_width="wrap_content"
            android:textColor="#B3FFFFFF"
            android:layout_height="wrap_content" />

        <!-- Desserts -->
        <TextView
            android:text="Desserts"
            android:textSize="20sp"
            android:textColor="#B3FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:text="• Cheesecake - $6.50"
            android:layout_width="wrap_content"
            android:textColor="#B3FFFFFF"
            android:layout_height="wrap_content" />
        <TextView android:text="• Chocolate Lava Cake - $7.00"
            android:layout_width="wrap_content"
            android:textColor="#B3FFFFFF"
            android:layout_height="wrap_content" />

        <!-- Return Button -->
        <Button
            android:id="@+id/btnBack"
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
