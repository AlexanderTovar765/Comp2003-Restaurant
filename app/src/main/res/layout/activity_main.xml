<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/restaurant_bg">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Restaurant Name -->
        <TextView
            android:text="(Restaurant Name)"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#B3FFFFFF"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp" />

        <!-- Login + Sign Up Buttons (side by side) -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnLogin"
                android:text="Login"
                android:textColor="#FFFFFFFF"
                android:background="#66FFFFFF"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btnSignUp"
                android:text="Sign Up"
                android:textColor="#FFFFFFFF"
                android:background="#66FFFFFF"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <!-- Two Info Boxes -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <!-- Opening Hours and Location Box -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#AAFFFFFF"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Opening Hours and Locations"
                    android:textStyle="bold"
                    android:textColor="#B3000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="123 Ocean View Blvd"
                    android:textColor="#B3000000"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Mon–Fri: 11AM–9PM\nSat–Sun: 12PM–10PM"
                    android:textColor="#B3000000"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Feedback and Social Media Box -->
            <LinearLayout
                android:orientation="vertical"
                android:background="#AAFFFFFF"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Enjoyed your Meal? Send us feedback!"
                    android:textStyle="bold"
                    android:textColor="#B3000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnFeedback"
                    android:text="Leave Feedback"
                    android:textColor="#FFFFFFFF"
                    android:background="#66FFFFFF"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Follow us on:"
                    android:textStyle="bold"
                    android:textColor="#B3000000"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="• Instagram\n• Facebook\n• Twitter"
                    android:textColor="#B3000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>









